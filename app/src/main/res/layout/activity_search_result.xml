<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".module.view.search.activity.SearchResultActivity">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/colorWhite" />
    <!--顶部搜索、提问控件-->
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_top"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp_8"
            android:src="@drawable/icon_back" />

        <EditText
            android:id="@+id/et_search_clazz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/background_gray3_20dp"
            android:hint="@string/string_search_hint"
            android:inputType="text"
            android:lines="1"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_5"
            android:textColorHint="@color/colorGray"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/string_search"
            android:textColor="@color/colorGray2"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_search"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/TabText"
        app:tabTextColor="@color/colorBlack" />

    <View
        android:id="@+id/view_str"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tab"
        android:background="@color/split_line"
        tools:ignore="UnknownIdInLayout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_str" />

</RelativeLayout>