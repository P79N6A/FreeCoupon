<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginTop="@dimen/dp_5"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp_10"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_5">

    <LinearLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="话费充值"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单号：1351684651684516"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/sp_11" />

            <!--兑换时间-->
            <TextView
                android:id="@+id/tv_ctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换时间：2019-12-12 12:59:59"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/sp_11" />

            <!--虚物说明-->
            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="虚物的Mark"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <!--物流信息-->
            <LinearLayout
                android:id="@+id/ll_logistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <!--物流名称-->
                <TextView
                    android:id="@+id/tv_logistics_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流名称：申通快递"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_12" />
                <!--物流单号-->
                <TextView
                    android:id="@+id/tv_logistics_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流单号：13148616478"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-123"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/split_line" />
</LinearLayout>